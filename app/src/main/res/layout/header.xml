<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/headerBackground">

    <TextView
        android:id="@+id/headerText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/headerImage"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="@string/wandelpoolHeader1"
        android:textColor="@color/headerTextColor1"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/headerText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerText1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:text="@string/wandelpoolHeader2"
        android:textColor="@color/headerTextColor2"
        android:textSize="10dp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="168dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/logo2" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/headerText2"
        android:background="#B3E5FC"
        android:visibility="visible" />
</RelativeLayout>