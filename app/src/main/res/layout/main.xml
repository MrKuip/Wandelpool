<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
  android:layout_height="fill_parent" >

  <RelativeLayout
      android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header" >

    <TextView
        android:id="@+id/headerText1"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/headerImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/wandelpoolHeader1"
        android:textSize="22sp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerText1"
        android:layout_marginTop="8dp"
        android:text="@string/wandelpoolHeader2"
        android:textSize="12sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="82dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:contentDescription="hallo"
        android:src="@drawable/ic_launcher_background"
        app:srcCompat="@drawable/schoen10" />
  </RelativeLayout>

  <ListView
    android:id="@+id/wandelingen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/header"
    android:fastScrollEnabled="true" />

</RelativeLayout>